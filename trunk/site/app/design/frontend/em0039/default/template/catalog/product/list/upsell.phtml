<?php
    $em0039 = new EM_Em0039settings_Em0039settings();
    $w = $em0039->get_upsell_width();
    $h = $em0039->get_upsell_height();
	$_columnCount = $em0039->get_column_count();
?>
<?php if(count($this->getItemCollection()->getItems())): ?>
<?php $_productCollection=$this->getItemCollection()->getItems();?>
<div class="box-collateral box-up-sell">
    <h2><?php echo $this->__('You may also know') ?></h2>
    <?php // $this->setColumnCount(5); // uncomment this line if you want to have another number of columns. also can be changed in layout ?>
    <div class="products-grid" id="upsell-product-table">
        <?php $this->resetItemsIterator() ?>
        <?php $i=0; foreach ($_productCollection as $_link): ?>
			<?php if ($i++%$_columnCount==0): ?>
				<ul class="products-grid">
			<?php endif ?>
                <?php if($_link=$this->getIterableItem()): ?>
                <li <?php if (($i)%$_columnCount==0): echo 'class="last"'; endif;?>>
                    <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize($w, $h) ?>" width="<?php echo $w; ?>" height="<?php echo $h; ?>" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" /></a>
                    <h3 class="product-name"><a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>"><?php echo $this->htmlEscape($_link->getName()) ?></a></h3>
                    <?php echo $this->getReviewsSummaryHtml($_link, 'short') ?>
                    <?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
                </li>
                <?php else: ?>
                <li class="empty">&nbsp;</li>
                <?php endif; ?>
            <?php if ($i%$_columnCount==0 || $i==count($this->getItemCollection()->getItems())): ?>
				</ul>
			<?php endif ?>
		<?php endforeach ?>
    </div>
    <script type="text/javascript">decorateTable('upsell-product-table')</script>
</div>
<?php endif ?>
