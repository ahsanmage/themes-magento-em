    $em0039 = new EM_EM0039Settings_EM0039Settings();
    $bg = $em0039->get_listing_thumb_bgcolor();
    $w = $em0039->get_listing_thumb_width();
    $h = $em0039->get_listing_thumb_height();
    $bgg =  $em0039->get_grid_thumb_bgcolor() ;
    $wg = $em0039->get_grid_thumb_width() ;
    $hg = $em0039->get_grid_thumb_height() ;
?>
<?php if (($_products = $this->getProductCollection()) && $_products->getSize()): ?>
<div class="widget widget-new-products">
    <div class="widget-products">
    <?php $_columnCount = $this->getColumnCount(); ?>
        <?php $i=0; foreach ($_products->getItems() as $_product): ?>
        <?php if ($i++%$_columnCount==0): ?>
        <ul class="products-grid">
        <?php endif ?>
            <li class="item<?php if(($i-1)%$_columnCount==0): ?> first<?php elseif($i%$_columnCount==0): ?> last<?php endif; ?>">
                <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize($wg, $hg); ?>" width="<?php echo $wg; ?>" height="<?php echo $hg; ?>" alt="<?php echo $this->stripTags($_product->getName(), null, true) ?>" /></a>
                <div class="name-price">
                    <h3 class="product-name"><a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>)"><?php echo $this->helper('catalog/output')->productAttribute($_product, $_product->getName() , 'name') ?></a></h3>
                    <?php echo $this->getReviewsSummaryHtml($_product, 'short') ?>
                    <?php echo $this->getPriceHtml($_product, true, '-widget-new-grid') ?>
                </div>
            </li>
        <?php if ($i%$_columnCount==0 || $i==count($_products)): ?>
        </ul>
        <?php endif ?>
        <?php endforeach; ?>
    </div>
</div>
<?php endif; ?>
